<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.bookex.widgets.TextInputLayoutFaasos
        android:id="@+id/ht_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

        <com.bookex.widgets.EditTextCustom
            android:id="@+id/et_profile_name"
            style="@style/textview_normal"
            android:hint="name"
            app:isBold="1" />
    </com.bookex.widgets.TextInputLayoutFaasos>

    <com.bookex.widgets.TextInputLayoutFaasos
        android:id="@+id/ht_profile_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

        <com.bookex.widgets.EditTextCustom
            android:id="@+id/et_profile_mobile"
            style="@style/textview_normal"
            android:hint="88886678"
            app:isBold="1" />
    </com.bookex.widgets.TextInputLayoutFaasos>

    <com.bookex.widgets.TextViewCustom
        android:id="@+id/profile_email"
        style="@style/textview_normal"
        android:hint="abc@gmail.com"
        app:isBold="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/dotted_border"
        android:layerType="software" />

    <com.bookex.widgets.ButtonCustom
        android:text="SAVE PROFILE"
       style="@style/Button_Primary" />
</LinearLayout>
